<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <a href="/">
      <img id="logo" src="/assets/images/logo-white.png"></a>
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          {%- for item in collections.all | eleventyNavigation -%}
            {%- if item.url -%}
              {%- set isCurrent = (item.url == page.url) -%}
              {% if item.children | length %}
                <li class="nav-item dropdown">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false">
                    {{ item.key }}
                  </a>
                  <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>
                      <a class="dropdown-item" href="{{ item.url | url }}">{{ item.title }}</a>
                    </li>
                    {%- for child in item.children %}
                      <li>
                        <a class="dropdown-item" href="{{ child.url | url }}">{{ child.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </li>
              {% else %}
                <li class="nav-item">
                  <a class="nav-link {% if isCurrent %} active{% endif %}" aria-current="page" href="{{ item.url | url }}">{{ item.title }}</a>
                </li>
              {% endif %}
            {%- endif -%}
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </nav>